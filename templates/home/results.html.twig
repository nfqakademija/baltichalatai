{% extends 'base.html.twig' %}

{% block title %}resultatai{% endblock %}

{% block body %}
    <body class="bc-index">
        {% include 'components/layout/navbar.html.twig' %}

        <div class = "grid">
            <div class="page-back">
                <a href="#">
                    <i class="fa fa-chevron-circle-left" style="font-size:60px"></i>
                </a>
            </div>
            <div class="limiter">
                <div class="container-table">
                    <div class="wrap-table">
                        <div class="table">
                            <div class="results-row header">
                                <div class="cell">
                                    Gyd. Vardas
                                </div>
                                <div class="cell">
                                    Specialybė
                                </div>
                                <div class="cell">
                                    Įstaiga
                                </div>
                                <div class="cell">
                                    Miestas
                                </div>
                            </div>

                            {% for specialist in specialists %}
                            <div class="results-row">
                            	<div class="cell" data-title="Full Name">
                                    <a href="/specialist/{{ specialist.id }}">{{ specialist.name }} {{ specialist.surname }}</a>
                            	</div>
                            <div class="cell" data-title="Age">
                            	{{ specialist.specialty }}
                            </div>
                            <div class="cell" data-title="Job Title">
                            	{{ specialist.clinic }}
                            </div>
                            <div class="cell" data-title="Location">
                            	{{ specialist.city }}
                            </div>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="page-forward">
            <a href="#">
                <i class="fa fa-chevron-circle-right" style="font-size:60px;"></i>
            </a>
        </div>
        </div>

    </body>
{% endblock %}