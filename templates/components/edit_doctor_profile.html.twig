{% block doctor_profile %}
	<div class="container-fluid bc-doctor-container">
		<div class="row">
			<div class="col-sm-4">
				<form action="/doctor">
				    <div class="panel text-center">
					    <div class="user-heading">
						    <a href="#"><img src="/build/profile-avatar.png" alt="" title=""></a>
							    <div class="edit-profile">
								    <input type="text" name="full_name" placeholder="Įveskite vardą ir pavardę"></input>
									<input type="text" name="specialty" placeholder="Pasirinkite specialybę"></input>
									<input type="text" name="clinic" placeholder="Pasirinkite kliniką"></input>
