{% block doctor_profile %}
	<div class="container-fluid bc-patient-container">
		<div class="row">
			<div class="col-sm-4">
				<div class="panel text-center">
					<div class="user-heading">
						<a href="#"><img src="/build/profile-avatar.png" alt="" title=""></a>
						<h2>{{ userInfo.getName()}} {{ userInfo.getSurname()}}</h2>
						{%  for specialty in app.user.getUserSpecialties() %}
							<li>{{ specialty.getSpecialtyId().getName() }}</li>
						{% endfor %}
						{% for clinic in app.user.getSpecialistClinics() %}
							<a><a href="{{ path('clinic_show', {'id': clinic.getClinicId().getId()}) }}">{{ clinic.getClinicId().getClinicInfo().getName() }}</a></p>
						{% endfor %}
					</div>
					<button class="btn btn-margin" onclick="location.href='/userinfo/edit'">Redaguoti profilį</button>
					<div>
						<button class="btn btn-margin" onclick="location.href='/specialist/edit'">Redaguoti specialybes</button>
					</div>
				</div>
			</div>
			<div class="col-sm-8 bc-patient-column-8">
				<div class="card mt-3 tab-card">
					<div class="card-header tab-card-header bc-patient-tab-header">
						<ul class="nav nav-tabs card-header-tabs" id="myTab" role="tablist">
							<li class="nav-item patient-tab">
								<a class="nav-link active" id="one-tab" data-toggle="tab" href="#one" role="tab" aria-controls="One" aria-selected="true" selected="true">Šiandien</a>
							</li>
							<li class="nav-item patient-tab">
								<a class="nav-link" id="two-tab" data-toggle="tab" href="#two" role="tab" aria-controls="Two" aria-selected="false">Kalendorius</a>
							</li>
						</ul>
					</div>

					<div class="tab-content" id="myTabContent">
						<div class="tab-pane fade show active p-3" id="one" role="tabpanel" aria-labelledby="one-tab">
						<table class="table">
						<thead>
							<tr>
								<th>Laikas</th>
								<th>Priežastis</th>
								<th>Pacientas</th>
								<th>Veiksmai</th>
							</tr>
							</thead>
							{% for visit in visits %}
							<tr>
								<td>{{ visit.getVisitDate()|date('H:i') }}</td>
								<td>{{ visit.getDescription() }}</td>
								<td>{{ visit.getClientId().getUserInfo().first().getName() }} {{ visit.getClientId().getUserInfo().first().getSurname() }}<br></td>
								<td>
									<button type="button" class="btn btn-secondary" onclick="location.href='/uservisit/{{ visit.getId() }}/delete'" data-toggle="tooltip" data-placement="bottom" title="Atšaukti"><i class="fa fa-times" aria-hidden="true"></i></button>
									<button type="button" class="btn btn-secondary" data-toggle="tooltip" data-placement="bottom" title="Komentuoti"><i class="fa fa-comment" aria-hidden="true"></i></button>
									<button type="button" class="btn btn-secondary" data-toggle="tooltip" data-placement="bottom" title="Siuntimas"><i class="fa fa-envelope" aria-hidden="true"></i></button>
									<button type="button" class="btn btn-secondary" data-toggle="tooltip" data-placement="bottom" title="Receptas"><i class="fa fa-medkit" aria-hidden="true"></i></button>
								</td>
							</tr>
							{% endfor %}
						</table>
						{# Create button pop up form#}
						</div>
						<div class="tab-pane fade p-3" id="two" role="tabpanel" aria-labelledby="two-tab">
						{# Change to calendar view for future appointments #}
							<h5 class="card-title">Tab Card Two</h5>
							<p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
							<a href="#" class="btn btn-primary">Go somewhere</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}